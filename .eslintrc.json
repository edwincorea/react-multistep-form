{
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "extends": [
        "react-app"
    ],
    "settings": {
        "react": {
            "version": "16.4.2"
        }        
    },    
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "warn",
            "never"
        ],
        "default-case": "off",
        "no-console": "off",
        "no-unused-vars": "warn",
        "no-restricted-globals": "off",        
        
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    }
}